  <body>
    <div class="container">
      <div class="input-section">
        <h1>Multi-Calculator</h1>
        <div class="main">
          <input id="one" type="number" placeholder="Enter the Input 1" /><br />
          <input
            id="two"
            type="number"
            placeholder="Enter the Input 2"
          /><br /><br /><br />
        </div>
        <div>
          <button onclick="performOperation('add')">Add</button>
          <button onclick="performOperation('sub')">Sub</button>
          <button onclick="performOperation('mul')">Mul</button>
          <button onclick="performOperation('div')">Div</button>
          <button onclick="performOperation('mod')">Mod</button>
          <button onclick="performOperation('power')">Power</button>
        </div>
      </div>
      <div class="output-section">
        <h3 id="result">Result:</h3>
        <button onclick="clearResult()">Clear</button>
      </div>
    </div>

    <script>
      function performOperation(operation) {
        const one = parseFloat(document.getElementById("one").value);
        const two = parseFloat(document.getElementById("two").value);
        let result;

        if (isNaN(one) || isNaN(two)) {
          result = "Enter the valid number";
        } else {
          switch (operation) {
            case "add":
              result = one + two;
              break;
            case "sub":
              result = one - two;
              break;
            case "mul":
              result = one * two;
              break;
            case "power":
              result = one ** two;
              break;
            case "div":
              if (two === 0) {
                result = "can't divide this number";
              } else {
                result = one / two;
              }
              break;
            case "mod":
              if (two === 0) {
                result = "can't modulate this number";
              } else {
                result = one % two;
              }
              break;
            default:
              result = "unknown process";
          }
        }
        document.getElementById("result").textContent = "Result: " + result;
      }

      function clearResult() {
        document.getElementById("result").textContent = "Result:";
      }
    </script>
